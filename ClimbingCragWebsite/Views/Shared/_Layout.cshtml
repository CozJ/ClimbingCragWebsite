<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WADClimbingCragsWebsite</title>

    <!--Mobile-->
    <link rel="stylesheet" href="~/css/mobile.css">
    <!--Desktop-->
    <link rel="stylesheet" media="screen and (min-width:1100px)" href="~/css/site.css"/>
    <!--Leaflet CSS file-->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin="" />
</head>
<body>
    <div class="background-content"></div>
    <div class="background-container">
        <header>
            <div class="logo-container">
                <a asp-controller="Home" asp-action="">
                    <img src="~/Images/CrabLogoOriginal-removebg-preview edited.png" style="width: 4em; height: auto;" alt="Website Logo for UKCrags" />
                    <h1>UKCrags</h1>
                </a>
            </div>
            <input type="checkbox" id="nav-toggle" class="nav-toggle">
            <label for="nav-toggle" class="nav-toggle-label">
                <div></div>
                <div></div>
                <div></div>
            </label>
            <nav>
                <ul>
                    <li class="nav-item"><a asp-controller="Crags" asp-action="Maps">map</a></li>
                    <li class="nav-item"><a asp-controller="Crags" asp-action="Index">crags</a></li>
                    <li class="nav-item"><a asp-controller="Route" asp-action="Index">routes</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Security" asp-action="SignOut" method="post">
                            <li class="nav-item"><a onclick="this.parentElement.parentElement.submit()">sign out</a></li>
                        </form>
                    }
                    else
                    {
                        <li class="login-button"><a asp-controller="Security" asp-action="SignIn">login</a></li>
                        <li class="register-button"><a asp-controller="Security" asp-action="Register">register</a></li>
                    }
                </ul>
            </nav>
        </header>
        <div class="Header-Padding"></div>
        <div class="Main-Content">
            <main>
                @RenderBody()
            </main>
        </div>
        <!--MVC Defaults-->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
